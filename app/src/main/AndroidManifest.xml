<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.startandroid.cookdev1">
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application

        android:allowBackup="true"
        android:icon="@drawable/lisapovar"
        android:label="@string/app_name"
        android:roundIcon="@drawable/lisapovar"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".RecipeActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation"></activity>
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ActivityNov"
            android:label="@string/title_activity_nov"
            android:screenOrientation="portrait"
            android:configChanges="orientation"
            android:noHistory="true"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name=".IntroActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation"/>
        <activity
            android:name=".ActivityMid"
            android:label="@string/title_activity_mid"
            android:screenOrientation="portrait"
            android:configChanges="orientation">
            14+
        </activity>
    </application>

</manifest>