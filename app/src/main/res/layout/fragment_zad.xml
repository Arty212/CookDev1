<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#009688"
    android:orientation="vertical"
    android:gravity="bottom">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="А теперь проверим твои знания!"
        android:textColor="#ffffff"
        android:textSize="23sp"
        android:layout_marginTop="10sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Введи название предмета, изображенного на картинке"
        android:textColor="#ffffff"
        android:textSize="17sp"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:cropToPadding="true"
            android:src="@drawable/polovnik" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:hint="Введи название"
        android:layout_gravity="center_horizontal"
        android:id="@+id/polovnik"
        android:inputType="textPersonName"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Проверить!"
        android:background="@drawable/buttongarn"
        android:id="@+id/buttonzad"
        android:textColor="#ffffff"
        android:layout_marginLeft="7sp"
        android:layout_marginRight="7sp"
        android:layout_marginBottom="7sp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Далее!"
        android:background="@drawable/buttongarn" android:id="@+id/buttonzad1"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffff"
        android:layout_marginLeft="7sp"
        android:layout_marginRight="7sp"
        android:layout_marginBottom="7sp" />


</LinearLayout>